<?xml version="1.0" encoding="UTF-8"?>
<a:authorAction xmlns:a="http://www.oxygenxml.com/ns/author/external-action"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.oxygenxml.com/ns/author/external-action http://www.oxygenxml.com/ns/author/external-action/authorAction.xsd"
  id="author">
  <a:name>${i18n(author)}</a:name>
  <a:description>${i18n(author_desc)}</a:description>
  <a:operations>
    <a:operation id="InsertFragmentOperation">
      <a:xpathCondition>//teiHeader/fileDesc/titleStmt</a:xpathCondition>
      <a:arguments>
        <a:argument name="fragment"><author>
  <persName>
    <surname/>
    <forename/>
  </persName>
</author></a:argument>
        <a:argument name="insertLocation">//teiHeader/fileDesc/titleStmt</a:argument>
      </a:arguments>
    </a:operation>
    <a:operation id="InsertFragmentOperation">
      <a:xpathCondition>parent:: author or self::author</a:xpathCondition>
      <a:arguments>
        <a:argument name="fragment"><author>
  <persName>
    <surname/>
    <forename/>
  </persName>
</author></a:argument>
        <a:argument name="insertLocation">author</a:argument>
        <a:argument name="insertPosition">After</a:argument>
      </a:arguments>
    </a:operation>
  </a:operations>
  <a:enabledInReadOnlyContext>false</a:enabledInReadOnlyContext>
</a:authorAction>
